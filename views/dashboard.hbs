{{#if user}}
    <div class="dashboard-header">
        <h1>Bem-vindo, {{user.username}}!</h1>
    </div>

    <div class="card-grid">
        
        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-number">12</div>
                <div class="stat-label">Pedidos Em Espera</div>
            </div>
        </div>

        <div class="card stat-card">
            <div class="card-body">
                <div class="stat-number">4</div>
                <div class="stat-label">Pedidos Para Coleta</div>
            </div>
        </div>

    </div>

    <br>
    
    {{#if (eq user.role "admin")}}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Painel de Administração</h3>
            </div>
            <div class="card-body">
                <p>Ações restritas para administradores do sistema.</p>
                <a href="/admin/users" class="btn btn-primary">Gerir Utilizadores</a>
                {{! (Futuros links admin aqui) }}
            </div>
        </div>
    {{/if}}

    <div class="card" style="margin-top: 1rem;">
        <div class="card-header">
            <h3 class="card-title">Painel de Sistemas</h3>
        </div>
        <div class="card-body">
            <p>Acesso aos sistemas internos.</p>
            <a href="/separacao" class="btn btn-primary">Separação de Produtos</a>
        </div>
    </div>

    <div style="margin-top: 2rem; text-align: center;">
        <a href="/auth/logout" class="btn btn-danger">
            Sair (Logout)
        </a>
    </div>

{{else}}
    <div class="card">
        <div class="card-body">
            <div class="form-error">
                <strong>Erro</strong>
                <p>Não foi possível carregar os dados do utilizador.</p>
            </div>
            <a href="/auth/login" class="btn btn-primary">Voltar para o Login</a>
        </div>
    </div>
{{/if}}