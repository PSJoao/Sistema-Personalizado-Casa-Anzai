<div class="form-card-container">
    
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">{{formTitle}}</h1>
        </div>

        <div class="card-body">
            <form action="{{formAction}}" method="POST">
                
                {{#if error}}
                    <div class="form-error">
                        {{error}}
                    </div>
                {{/if}}

                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" class="form-control"
                           value="{{#if userToEdit}}{{userToEdit.username}}{{else}}{{username}}{{/if}}" 
                           required>
                </div>

                {{#unless isEditing}}
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                {{else}}
                    <p><em>(A alteração de senha deve ser feita por um fluxo de "Reset de Senha".)</em></p>
                {{/unless}}

                <div class="form-group">
                    <label for="role">Cargo (Role):</label>
                    <select id="role" name="role" class="form-control" required>
                        <option value="funcionario" {{#if (eq userToEdit.role "funcionario")}}selected{{/if}}>Funcionário</option>
                        <option value="admin" {{#if (eq userToEdit.role "admin")}}selected{{/if}}>Admin</option>
                    </select>
                </div>

                {{#if isEditing}}
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" id="is_active" name="is_active" class="form-check-input"
                                   {{#if userToEdit.is_active}}checked{{/if}}>
                            <label for="is_active" class="form-check-label">Utilizador Ativo</label>
                        </div>
                    </div>
                {{/if}}
                
                <div class="form-footer">
                    <a href="/admin/users" class="btn btn-outline">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>