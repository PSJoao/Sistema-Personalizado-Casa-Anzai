<div class="page-header">
    <div>
        <h1>Importar Pedidos</h1>
        <p>Carregue as planilhas exportadas das plataformas para atualizar a dashboard.</p>
    </div>
    <a href="/pedidos" class="btn btn-outline">Voltar para Dashboard</a>
</div>

{{#if (lookup @root.query "error")}}
    <div id="page-feedback"
         data-type="error"
         data-title="Importação falhou"
         data-message="{{lookup @root.query "error"}}">
    </div>
{{else if (lookup @root.query "success")}}
    <div id="page-feedback"
         data-type="success"
         data-title="Importação concluída"
         data-message="Novos pedidos importados com sucesso. Inseridos: {{lookup @root.query "inserted"}}, atualizados: {{lookup @root.query "updated"}}.">
    </div>
{{/if}}

<section class="card">
    <div class="card-body">
        <form action="/pedidos/upload" method="POST" enctype="multipart/form-data" class="orders-upload-form">
            <div class="form-group">
                <label for="plataforma">Plataforma</label>
                <select id="plataforma" name="plataforma" class="form-control" required>
                    <option value="" disabled selected>Selecione uma plataforma</option>
                    {{#each platforms}}
                        <option value="{{id}}">{{label}}</option>
                    {{/each}}
                </select>
                <small class="form-text">Novas plataformas serão adicionadas aqui futuramente.</small>
            </div>

            <div class="form-group">
                <label for="orderFiles">Planilhas de pedidos (.xlsx)</label>
                <input type="file" id="orderFiles" name="orderFiles" class="form-control" multiple accept=".xlsx,.xls">
                <small class="form-text">Você pode selecionar várias planilhas do Mercado Livre de uma vez.</small>
            </div>

            <div class="form-footer">
                <a href="/pedidos" class="btn btn-outline">Cancelar</a>
                <button type="submit" class="btn btn-primary">Enviar Planilhas</button>
            </div>
        </form>
    </div>
</section>

